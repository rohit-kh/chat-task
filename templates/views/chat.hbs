<!DOCTYPE html>
<html>

<head>
    <title>Chat</title>
    <link rel="icon" href="/img/favicon.png">
    <link rel="stylesheet" href="/css/chat-styles.css">
</head>

<body>
    <div class="chat">

        <div id="sidebar" class="chat__sidebar">
            <div class="chat__rooms">

            </div>
            {{!-- <footer> --}}
                <div class="logout">Logout</div>
            {{!-- </footer> --}}
        </div>
        <div class="chat__main" style="display: none">
            <div class="chat-header"><p class="room-name"></p>
            </div>
            <div id="messages" class="chat__messages"></div>

            <div class="compose">
                <form id="message-form">
                    <input name="message" placeholder="Message" required autocomplete="off">
                    <button>Send</button>
                </form>
            </div>
        </div>
    </div>

    <script id="message-template" type="text/html">
            <div class="message">
                <p>
                    <span class="message__name">\{{username}}</span>
                    <span class="message__meta">\{{createdAt}}</span>
                </p>
                <p>\{{message}}</p>
            </div>
        </script>

        <script id="message-history-template" type="text/html">
            <div class="message">
                \{{#messages}}
                <p>
                    <span class="message__name">\{{sentBy.name}}</span>
                    <span class="message__meta">\{{createdAt}}</span>
                </p>
                <p>\{{data}}</p>
                \{{/messages}}
            </div>
        </script>

    <script id="location-message-template" type="text/html">
            <div class="message">
                <p>
                    <span class="message__name">\{{username}}</span>
                    <span class="message__meta">\{{createdAt}}</span>
                </p>
                <p><a href="\{{url}}" target="_blank">My current location</a></p>
            </div>
        </script>

    <script id="sidebar-template" >
        <h2 class="room-title">Chat Room: \{{room}}</h2>
        <h3 class="list-title">Active Users</h3>
        <ul class="users">
            \{{#users}}
                <li>\{{username}}</li>
            \{{/users}}
        </ul>
    </script>
    <script id="sidebar-chat-rooms-template">
        <h3 class="rooms-title">Chat Rooms</h3>
        <ul class="rooms">
            \{{#rooms}}
                <li class="room" data-id="\{{_id}}">\{{name}}</li>
            \{{/rooms}}
        </ul>
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.6.0/qs.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/chat.js"></script>
</body>

</html>